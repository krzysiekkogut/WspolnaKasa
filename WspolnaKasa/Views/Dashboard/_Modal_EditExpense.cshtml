@model WspolnaKasa.Models.Dashboard.ExpenseViewModel

@{
    ViewBag.ModalEditExpense_Title = WspolnaKasa.App_GlobalResources.Translations.Dashboard_EditExpense;
    ViewBag.ModalEditExpense_GroupMembers = WspolnaKasa.App_GlobalResources.Translations.Dashboard_ModalAddExpense_GroupMembers;
}

<div class="modal fade" id="editExpenseModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">@ViewBag.ModalEditExpense_Title.</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("EditExpense", "Dashboard", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group">
                        @Html.AntiForgeryToken()
                        <input id="expenseIdEditExpenseModal" type="hidden" name="ExpenseId" value="" />
                        @Html.DropDownList("GroupId", null, WspolnaKasa.App_GlobalResources.Translations.Dashboard_GroupSelect, htmlAttributes: new { id = "groupSelectEditModal", @class = "form-control", style = "margin-bottom: 1px;" })
                        <select id="participantsEditExpenseModal" name="Participants" class="form-control" multiple style="margin-bottom: 1px;"></select>
                        @Html.TextBoxFor(m => m.Description, new { id = "descriptionEditExpenseModal", @class = "form-control", style = "margin-bottom: 1px;", placeholder = @Html.DisplayNameFor(m => m.Description) })
                        @Html.TextBoxFor(m => m.Date, new { id = "dateEditExpenseModal", @class = "form-control datepicker", style = "margin-bottom: 1px;", placeholder = @Html.DisplayNameFor(m => m.Date) })
                        @Html.TextBoxFor(m => m.Amount, new { id = "amountEditExpenseModal", @class = "form-control", style = "margin-bottom: 1px;", placeholder = @Html.DisplayNameFor(m => m.Amount) })
                    </div>
                    <div style="text-align:right">
                        <button type="submit" class="btn btn-primary btn-sm" name="CreateOrJoin" value="Create">Zmień</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
