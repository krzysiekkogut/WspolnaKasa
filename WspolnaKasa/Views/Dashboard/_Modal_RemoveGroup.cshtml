@model WspolnaKasa.Models.Dashboard.RemoveGroupViewModel

@{
    ViewBag.ModalRemoveGroup_Title = WspolnaKasa.App_GlobalResources.Translations.Dashboard_RemoveGroup;
    ViewBag.ModalRemoveGroup_RemoveBtn = WspolnaKasa.App_GlobalResources.Translations.Dashboard_Remove;
    ViewBag.ModalRemoveGroup_ConfirmationText = WspolnaKasa.App_GlobalResources.Translations.Dashboard_RemoveGroupConfirmationText;
}

<div class="modal fade" id="removeGroup" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">@ViewBag.ModalRemoveGroup_Title.</h4>
            </div>
            <div class="modal-body">
                <p>@ViewBag.ModalRemoveGroup_ConfirmationText</p>
                @using (Html.BeginForm("RemoveGroup", "Dashboard", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.GroupId, new { id = "groupIdRemoveModal" })
                        @Html.PasswordFor(m => m.Secret, new { @class = "form-control", style = "margin-bottom: 1px", placeholder = @Html.DisplayNameFor(m => m.Secret) })
                    </div>
                    <div style="text-align:right">
                        <button type="submit" class="btn btn-primary btn-sm">@ViewBag.ModalRemoveGroup_RemoveBtn</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
