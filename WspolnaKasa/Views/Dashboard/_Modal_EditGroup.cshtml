@model WspolnaKasa.Models.Dashboard.EditGroupViewModel

@{
    ViewBag.ModalEditGroup_Title = WspolnaKasa.App_GlobalResources.Translations.Dashboard_EditGroup;
    ViewBag.ModalEditGroup_Save = WspolnaKasa.App_GlobalResources.Translations.Dashboard_SaveChanges;    
}

<div class="modal fade" id="editGroup" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">@ViewBag.ModalEditGroup_Title.</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("EditGroup", "Dashboard", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.GroupId, new { id = "groupIdEditModal" })
                        @Html.TextBoxFor(m => m.NewName, new { @class = "form-control", style = "margin-bottom: 1px", placeholder = @Html.DisplayNameFor(m => m.NewName) })
                    </div>
                    <div style="text-align:right">
                        <button type="submit" class="btn btn-primary btn-sm">@ViewBag.ModalEditGroup_Save</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>