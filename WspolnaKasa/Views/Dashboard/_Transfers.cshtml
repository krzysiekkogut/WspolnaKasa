@model IEnumerable<WspolnaKasa.Models.Dashboard.TransferViewModel>

@{
    ViewBag.Transfer_RemoveTransfer = WspolnaKasa.App_GlobalResources.Translations.Dashboard_RemoveTransfer;
    ViewBag.Transfer_Group = WspolnaKasa.App_GlobalResources.Translations.Dashboard_Group;
    ViewBag.Transfer_PersonFrom = WspolnaKasa.App_GlobalResources.Translations.Dashboard_PersonFrom;
    ViewBag.Transfer_PersonTo = WspolnaKasa.App_GlobalResources.Translations.Dashboard_PersonTo;
    ViewBag.Transfer_Description = WspolnaKasa.App_GlobalResources.Translations.Dashboard_Description;
    ViewBag.Transfer_Date = WspolnaKasa.App_GlobalResources.Translations.Dashboard_Date;
    ViewBag.Transfer_Amount = WspolnaKasa.App_GlobalResources.Translations.Dashboard_Amount;
}

<div class="col-lg-12">
    <div style="margin-top:5px;">
        <button id="btnRemoveTransfer" class="btn btn-primary btn-sm disabled" disabled title="@ViewBag.Transfer_RemoveTransfer" data-toggle="modal" data-target="#removeTransferModal">
            <span class="glyphicon glyphicon-remove" />
        </button>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>@ViewBag.Transfer_Group</th>
                <th>@ViewBag.Transfer_PersonFrom</th>
                <th>@ViewBag.Transfer_PersonTo</th>
                <th>@ViewBag.Transfer_Description</th>
                <th>@ViewBag.Transfer_Date</th>
                <th class="text-right">@ViewBag.Transfer_Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transfer in Model)
            {
                <tr>
                    <td>
                        <input class="transferId" type="hidden" value="@transfer.TransferId" />
                        @transfer.Group
                    </td>
                    <td>@transfer.UserFrom</td>
                    <td>@transfer.UserTo</td>
                    <td>@transfer.Description</td>
                    <td>@transfer.Date.ToShortDateString()</td>
                    <td class="text-right">@string.Format("{0:F2} zł", @transfer.Amount)</td>
                </tr>
            }
        </tbody>
    </table>
    <input type="hidden" id="selectedTransferId" />
</div>